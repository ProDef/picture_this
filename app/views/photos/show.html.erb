
<p>
  <strong>Photo:</strong>
  <%= @photo.title %>
</p>
 
<p>
  <strong>description:</strong>
  <%= @photo.text %>
</p>

<p>
<strong><%= image_tag @photo.image.url(:thumb) %></strong>
</p>

<h3>Comments</h3>
<% @photo.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>


<%= form_for([@photo, @photo.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>


