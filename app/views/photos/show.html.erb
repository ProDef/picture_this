
<p>
  <strong>Restaurant:</strong>
  <%= @photo.title %>
</p>
 
<p>
  <strong>description:</strong>
  <%= @photo.text %>
</p>

<p>
<strong><%= image_tag @photo.image.url(:thumb) %></strong>
</p>

<h2>comment</h2>
<%= form_for([@photo, @photo.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "post" %>
  </p>
<% end %>