<%= form_for([@photo, @photo.comments.build]) do |f| %>
  
  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<h3>Comments</h3>
<% @photo.comments.each do |comment| %>
  <p>
    <%= current_user.profile.username %>
  </p>
 
  <p>
    <%= comment.body %>
  </p>
<% end %>






