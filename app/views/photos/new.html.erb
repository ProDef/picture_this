<h1>Upload a photo!</h1>
<br>

<% if @photo.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this post from being saved:</h2>
 
    <ul>
    <% @photo.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @photo do |f| %>


   <div><%= f.label :title %>
   <%= f.text_field :title %></div>
   <br>
   <div id="image"><%= f.file_field :image %></div>
   <br>
   <div><%= f.label :caption %>
   <%= f.text_field :text %></div>
   <br>
   <p><%= f.label :tags %>
   <%= f.text_field :tag_names %></p>

   <%= f.hidden_field :user_id, value: current_user.id %>
   <%= f.hidden_field :user, value: current_user %>
   <br> 
   <div id="add"><%= submit_tag 'Add photo', :name => :send_message, :class => "btn pull-left"  %></div>
  <% end %>

