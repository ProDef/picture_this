<h1>New Photo</h1>

<% if @photo.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this post from being saved:</h2>
 
    <ul>
    <% @photo.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @photo do |f| %>


   <%= f.label :title %>
   <%= f.text_field :title %>

   <%= f.file_field :image %>

   <%= f.label :caption %>
   <%= f.text_field :text %>

   <p><%= f.label :tags %>
   <%= f.text_field :tag_names %></p>

   <%= f.hidden_field :user_id, value: current_user.id %>
   <%= f.hidden_field :user, value: current_user %>
 
   <%= f.submit 'add photo'%>
  <% end %>

