<h1>Home Feed</h1>

<% if signed_in? %>

      <section>
        <%= render 'shared/stats' %>
      </section>

<% else %>

<% end %>


<div class="fb-share-button" data-href="http://www.facebook.com" data-width="500" data-type="button_count"></div>

<div><a href="https://twitter.com/share" class="twitter-share-button" data-hashtags="YOLO">Tweet</a>
<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script></div>

<div class="g-plus" data-action="share"></div>
<td></td>
<%= link_to 'Favourites', user_favourites_path(current_user) %>
<div>
	<% @photos.each do |photo| %>
	  <div class='col-md-4'>
      <h3><%= photo.title %></h3>
      <%= image_tag photo.image.url(:thumb), class: 'uploaded-pic' %>
      	<p><%= photo.text %></p>
      	<p>Tags:
        <%= tag_names(photo) %>
      </p>
      <td><%= link_to 'comment', photo_path(photo) %></td>
      <td><%= link_to 'Update', edit_photo_path(photo) %></td>
	    <td><%= link_to 'delete', photo_path(photo),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>

                    
  <p><%= link_to "favourite",   favourite_photo_path(photo, type: "favourite"), method: :put %>
  <%= link_to "unfavourite", favourite_photo_path(photo, type: "unfavourite"), method: :put %></p>


      
    </div>
    
	<% end %>


  

</div>
