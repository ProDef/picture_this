<div class="stats">
  <a href="<%= following_user_path(current_user) %>">
    <strong id="following" class="stat">
      <%= current_user.followed_users.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(current_user) %>">
    <strong id="followers" class="stat">
      <%= current_user.followers.count %>
    </strong>
    followers
  </a>
  <% @user ||= @profile.user %>
  <% if @user != current_user %>
	  <a>
	  	<%= render "users/follow_form" %>
	  </a>
	<% end %>
</div>

<p>
  <strong>name</strong>
  <%= @profile.first_name %>
  <%= @profile.second_name %>
</p>

<p>
  <strong>sex:</strong>
  <%= @profile.gender %>
</p>

<p>
  <strong>dob</strong>
  <%= @profile.date_of_birth %>
</p>
 
 <p>
  <strong>home town:</strong>
  <%= @profile.home_town %>
</p>

