<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <%#= gravatar_for @user %>
      <h1><%= @user.profile.username %></h1>
      <span><%= link_to "view my profile", @current_user.profile %></span>
          </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
          <%= @user.profile.username %>
            <%#= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <% @users.each do |user| %>
          <li><%= user.profile.username %></li>
        <% end %>
        <%#= render @users %>
      </ul>
    <% end %>
  </div>
</div>
